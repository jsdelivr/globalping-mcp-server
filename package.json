		"@vitest/coverage-v8": "^3.2.4",
		"happy-dom": "^20.0.10",
		"marked": "^17.0.0",
		"patch-package": "^8.0.1",
		"typescript": "^5.9.3",
		"vitest": "^3.2.4",
		"workers-mcp": "^0.0.13",
		"wrangler": "^4.42.0"
	},
	"dependencies": {
		"@cloudflare/workers-oauth-provider": "^0.1.0",
		"@modelcontextprotocol/sdk": "^1.18.2",
		"agents": "^0.2.6",
