{
  "compilerOptions": {
    "target": "ESNext",             /* Specify ECMAScript target version */
    "module": "NodeNext",           /* Specify module code generation: 'NodeNext' for modern Node.js */
    "moduleResolution": "NodeNext", /* Specify module resolution strategy */
    "outDir": "./build",             /* Redirect output structure to the directory */
    "rootDir": "./src",                /* Set rootDir to src to flatten output structure */
    "strict": true,                 /* Enable all strict type-checking options */
    "esModuleInterop": true,        /* Enables emit interoperability between CommonJS and ES Modules */
    "skipLibCheck": true,           /* Skip type checking of declaration files */
    "forceConsistentCasingInFileNames": true, /* Disallow inconsistently-cased references to the same file */
    "resolveJsonModule": true,      /* Include modules imported with .json extension */
    "sourceMap": true,              /* Generate corresponding '.map' file */
    "isolatedModules": true         /* Add isolatedModules as required by error message */
  },
  "include": ["**/*"],  /* Include all files under src directory */
  "exclude": ["node_modules", "dist", "build"] /* Exclude node_modules, dist and build directories */
}